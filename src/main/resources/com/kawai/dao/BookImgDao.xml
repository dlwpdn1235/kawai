   	 <insert id="imginsert"   parameterType="BookImgVO">
	     INSERT INTO img (img_file_name)
	   	values (#{img_file_name})
  	</insert>
  	
  	<update id="imgupdate" parameterType="BookImgVO">
  		update img set img_file_name =#{img_file_name} where img_no=#{img_no}
  		UPDATE img
		SET img_file_name = #{img_file_name}
		WHERE img_no = #{bs_no};
  	</update>
  	
  	<delete id="imgdelete" parameterType="int">
  		delete from img where img_no = #{img_no}
  	</delete>
  
  	<select id="imgread"   resultType="BookImgVO">
  		select * from img 
  		where 
  		img_no = #{img_no}
  	</select> 
  	 
  	<select id="imgreadAll" resultType="BookImgVO">
  		select * from img order by img_no desc
  	</select>
  	
