<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kawai.dao.MarketCartDao">

	<insert id="marketCartInsert" parameterType="MarketCart">
		insert into mcart (mCount,market_id,user_id) values(#{mCount},#{market_id},#{user_id})
	</insert>

	<select id="marketCartList" parameterType="MarketCart">
	SELECT c.mcart_id, c.mCount, m.market_id, m.mTitle, m.mContent,
	m.mPrice, m.mDate
	FROM mCart c
	LEFT JOIN market m ON c.mcart_id = m.market_id
	LEFT JOIN user u ON u.id = m.market_id;
	</select>
	
	<update id="marketCartUpdate" parameterType="MarketCart">
		update user_id=#{id} , user_name=#{name} , user_address =#{address} , user_phonenum=#{phonenum}
	</update>
