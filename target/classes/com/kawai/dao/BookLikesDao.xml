<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- bookimg -->
  <!-- bookimg   bookstore 만들고 다시 test readall은 됬음 -->
  
   <mapper namespace="com.kawai.dao.BookLikesDao">
    
    <insert id="insertBookLikes" parameterType="BookLikesVO">
        INSERT INTO likes (fk_id, fk_bs_no)
        VALUES (#{fk_id}, #{fk_bs_no})
    </insert>
  
    <delete id="deleteBookLikes" parameterType="BookLikesVO">
        DELETE FROM likes
        WHERE fk_id = #{fk_id} AND fk_bs_no = #{fk_bs_no}
    </delete>
    
        <select id="checkLikes" parameterType="map" resultType="boolean">
	        SELECT COUNT(*) > 0
	        FROM book_likes
	        WHERE fk_id = #{fk_id}
	        AND fk_bs_no = #{fk_bs_no}
	    </select>
  
  </mapper>