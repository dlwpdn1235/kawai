<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kawai.dao.MarketOrderDao">



	<select id="mOrderReadAll" resultType="MarketOrder">
		select * from morder
	</select>

	<insert id="marketOrderInsert">
		insert into morder
		(user_id,market_id,mRecIp,mRecDate,mRecPrice,mRecContent,mRecAddress)
		values (#{user_id},#{market_id},#{mRecIp},now(),#{mRecPrice},#{mRecContent},#{mRecAddress})
	</insert>

	<delete id="marketOrderDelete" parameterType="MarketOrder">
		delete from morder where mOrder_id = #{mOrder_id}
	</delete>

	<update id="marketOrderUpdate" parameterType="marketOrder">
		update morder set mrecContent =#{mRecContent} where mOrder_id=#{mOrder_id}
	</update>
	
	<select id="marketOrderSum" parameterType="marketOrder">
		SELECT *
		FROM Market
		INNER JOIN MOrder ON Market.market_id = MOrder.market_id;
	</select>
</mapper>